<h1><%= "Submission" %></h1>

<% if flash.any? %>
  <div class="flash">
    <div class="container">
      <li>
        <%= flash[:notice]%>
      </li>
    </div>
  </div>
<% end %>

<br>
  <%= form_for @books do |f| %>
    <div>
      <%= f. label :title%>
      <br>
        <%= f. text_area :title%>
    </div>
    <div>
      <%= f. label :description %>
      <br>
        <%= f. text_area :description, size: "40x10" %>
    </div>
    <div>
      <%= f. label :url%>
      <br>
        <%= f. text_area :url%>
    </div>
    <div>
      <%= f.submit  "Submit"%>
    <div>
  <%end%>
</br>
